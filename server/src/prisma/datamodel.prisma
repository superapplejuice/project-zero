type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  password: String!
  createdAt: DateTime! @createdAt
  items: [Item]!
  cart: Cart! @relation(link: INLINE)
}

type Item {
  id: ID! @id
  name: String!
  description: String!
  price: Int!
  images: [String!]! @scalarList(strategy: RELATION)
  user: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Cart {
  id: ID! @id
  user: User
  items: [Item]!
}