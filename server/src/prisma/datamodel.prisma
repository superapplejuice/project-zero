type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  password: String!
  createdAt: DateTime! @createdAt
  items: [Item]!
}

type Item {
  id: ID! @id
  name: String!
  description: String!
  price: Int!
  images: [String!]! @scalarList(strategy: RELATION)
  user: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}